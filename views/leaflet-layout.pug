doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='https://unpkg.com/leaflet@1.3.1/dist/leaflet.css', integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="")

        script(src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js", integrity= "sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==", crossorigin="")


    body
        h1 #{title}
        ul
            li Country under roll-out
            li Sigfox coverage
            li Monarch coverage
        block content

        script.
            const sigfoxMapUrl = "#{sigfoxMapUrl}";
            const sigfoxMonarchMapUrl = "#{sigfoxMonarchMapUrl}";
            const backgroundMapUrl = "#{backgroundMap}";

            const countries = !{countries} ;

            const map = L.map('mapid', {
                fullscreenControl: true,
                zoomControl: true,
                maxZoom: 11,
                minZoom: 4,
                worldCopyJump: true
            }).setView([44, 0], 3);

            const style_countries = {
                "color": "#7E0BFF",
                "weight": 0,
                zIndex: 90,
                fillOpacity: 0.1,
                pane: 'tilePane'
            };

            // Adds the openstreetmap layer
            L.tileLayer(backgroundMapUrl,{
                maxZoom: 11
            }).addTo(map);
            L.geoJSON(countries, style_countries).addTo(map);
            L.tileLayer(sigfoxMapUrl,{
                zoomOffset: 0,
                maxZoom: 11,
                maxNativeZoom: 11,
                zIndex: 500,
                opacity: 0.7,
                attribution: ' <a href="https://sigfox.com">sigfox</a>'
            }).addTo(map);
            L.tileLayer(sigfoxMonarchMapUrl,{
                zoomOffset: 0,
                maxZoom: 11,
                maxNativeZoom: 11,
                zIndex: 500,
                opacity: 0.7,
                attribution: ' <a href="https://sigfox.com">sigfox</a>'
            }).addTo(map);



